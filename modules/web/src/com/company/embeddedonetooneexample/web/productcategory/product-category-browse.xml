<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.embeddedonetooneexample.web.productcategory.ProductCategoryBrowse"
        focusComponent="productCategoriesTable"
        lookupComponent="productCategoriesTable"
        messagesPack="com.company.embeddedonetooneexample.web.productcategory">
    <dsContext>
        <collectionDatasource id="productCategoriesDs"
                              class="com.company.embeddedonetooneexample.entity.ProductCategory"
                              view="_local">
            <query>
                <![CDATA[select e from emoto$ProductCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="productCategoriesTable"
            spacing="true">
        <filter id="filter"
                applyTo="productCategoriesTable"
                datasource="productCategoriesDs">
            <properties include=".*"/>
        </filter>
        <table id="productCategoriesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="productCategoriesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="productCategoriesTable.create"/>
                <button id="editBtn"
                        action="productCategoriesTable.edit"/>
                <button id="removeBtn"
                        action="productCategoriesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
